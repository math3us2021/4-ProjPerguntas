<%- include ('../partials/header.ejs') %>
<body>
    <%- include ('../partials/navbar') %>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p> <%= pergunta.descricao %></p>
        <hr>
        <form method="POST" action="/responder">
            <label></label>
            <h3>Reesponda</h3>
            <textarea placeholder="Digite sua resposta aqui" class="form-control" name="corpo"></textarea><br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% resposta.forEach(resposta => {%>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
        <% }) %>
</body>
<%- include ('../partials/footer.ejs') %>
